{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "semanticCommits": "enabled",
  "gitIgnoredAuthors": [
    "blahspambot"
  ],
  "repositories": [
    "Comcast/scte-35"
  ],
  "enabledManagers": [
    "gomod",
    "github-actions",
    "pre-commit"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true
    }
  ],
  "platformAutomerge": true,
  "postUpdateOptions": [
    "gomodTidy"
  ]
}
